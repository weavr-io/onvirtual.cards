{
    "name": "onvirtual-cards",
    "version": "1.0.0",
    "description": "onvirtual.cards for weavr",
    "author": "Threls Ltd.",
    "private": true,
    "scripts": {
        "dev": "nuxt",
        "build": "nuxt build",
        "start": "nuxt start",
        "lint": "eslint --ext .ts,.jsx,.js,.html,.vue . && stylelint \"**/*.{css,scss}\"",
        "lint:fix": "eslint --fix --ext .ts,.jsx,.js,.html,.vue . && stylelint \"**/*.{css,scss}\" --fix",
        "lint:ci": "eslint --ext .ts,.jsx,.js,.html,.vue . && stylelint \"**/*.{css,scss}\" && prettier \"**/*.{js,ts,jsx,vue,scss,css,json,html}\" --check",
        "precommit": "npm run lint",
        "pretty": "prettier --write \"**/*.{js,ts,jsx,vue,scss,css,json,html}\"",
        "generate": "nuxt generate",
        "prepare": "husky",
        "postinstall": "pnpm exec vue-demi-fix"
    },
    "dependencies": {
        "@nuxtjs/axios": "^5.13.6",
        "@nuxtjs/composition-api": "^0.34.0",
        "@nuxtjs/dotenv": "^1.4.2",
        "@pinia/nuxt": "^0.2.1",
        "bootstrap": "^4.6.2",
        "bootstrap-vue": "^2.23.1",
        "dot-object": "^2.1.5",
        "js-cookie": "^3.0.5",
        "libphonenumber-js": "^1.11.4",
        "luxon": "^3.4.4",
        "nuxt": "^2.18.1",
        "pinia": "2.1.7",
        "ts-node": "^10.9.2",
        "vue-flatpickr-component": "^8.1.8",
        "vue-infinite-loading": "^2.4.5",
        "vue-virtual-scroller": "^1.1.2",
        "zod": "3.23.8"
    },
    "devDependencies": {
        "@nuxt/types": "^2.18.1",
        "@nuxt/typescript-build": "^3.0.2",
        "@nuxtjs/eslint-config-typescript": "^12.1.0",
        "@nuxtjs/eslint-module": "^3.1.0",
        "@nuxtjs/recaptcha": "^1.1.2",
        "@nuxtjs/svg": "^0.4.1",
        "@types/lodash-es": "^4.17.12",
        "@types/luxon": "^3.4.2",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-nuxt": "^4.0.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-promise": "^6.6.0",
        "eslint-plugin-vue": "^9.27.0",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.7",
        "lodash-es": "^4.17.21",
        "prettier": "^3.3.3",
        "sass": "1.64.2",
        "sass-loader": "^10.5.2",
        "stylelint": "^15.11.0",
        "stylelint-config-standard": "^34.0.0",
        "stylelint-config-standard-scss": "^11.1.0",
        "typescript": "4.9.5",
        "vue-svg-loader": "^0.16.0",
        "vue-template-compiler": "^2.7.16"
    },
    "lint-staged": {
        "*.{js,jsx,ts,html,vue}": "eslint --fix",
        "*.{css,scss}": "stylelint --fix",
        "*.{js,ts,jsx,vue,scss,css,json,html}": "prettier --write"
    },
    "overrides": {
        "vue": "^2.7.16"
    }
}
