{
    "name": "onvirtual-cards",
    "version": "1.0.0",
    "description": "onvirtual.cards for weavr",
    "author": "Threls Ltd.",
    "private": true,
    "scripts": {
        "dev": "nuxt",
        "build": "nuxt build",
        "start": "nuxt start",
        "lint": "eslint --ext .ts,.jsx,.js,.html,.vue . && stylelint \"**/*.{css,scss}\"",
        "lint:fix": "eslint --fix --ext .ts,.jsx,.js,.html,.vue . && stylelint \"**/*.{css,scss}\" --fix",
        "lint:ci": "eslint --ext .ts,.jsx,.js,.html,.vue . && stylelint \"**/*.{css,scss}\" && prettier \"**/*.{js,ts,jsx,vue,scss,css,json,html}\" --check",
        "precommit": "npm run lint",
        "pretty": "prettier --write \"**/*.{js,ts,jsx,vue,scss,css,json,html}\"",
        "generate": "nuxt generate",
        "prepare": "husky install"
    },
    "dependencies": {
        "@nuxtjs/axios": "^5.13.6",
        "@nuxtjs/dotenv": "^1.4.1",
        "bootstrap": "^4.6.2",
        "bootstrap-vue": "^2.23.1",
        "dot-object": "^2.1.4",
        "js-cookie": "^2.2.1",
        "nuxt": "^3.4.3",
        "ts-node": "^10.9.1",
        "vue-flatpickr-component": "^8.1.7",
        "vue-infinite-loading": "^2.4.5",
        "vue-moment": "^4.1.0",
        "vue-phone-number-input": "^1.12.13",
        "vuelidate": "^0.7.7",
        "vuex-class": "^0.3.2"
    },
    "devDependencies": {
        "@nuxt/types": "^2.16.3",
        "@nuxt/typescript-build": "2.1.0",
        "@nuxtjs/eslint-config-typescript": "^10.0.0",
        "@nuxtjs/eslint-module": "^3.1.0",
        "@nuxtjs/recaptcha": "^1.1.1",
        "@nuxtjs/svg": "^0.4.0",
        "@types/vuelidate": "^0.7.15",
        "@typescript-eslint/eslint-plugin": "^5.48.1",
        "@typescript-eslint/parser": "^5.48.1",
        "eslint": "^8.39.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-config-standard": "^17.0.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-nuxt": "^4.0.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-vue": "^9.11.0",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.2",
        "nodemon": "^2.0.20",
        "nuxt-property-decorator": "^2.9.1",
        "prettier": "^2.8.8",
        "stylelint": "^15.6.1",
        "stylelint-config-standard": "^33.0.0",
        "stylelint-config-standard-scss": "^8.0.0",
        "sass": "^1.57.1",
        "sass-loader": "^10.4.1",
        "vue-property-decorator": "^9.1.2",
        "vue-svg-loader": "^0.16.0",
        "vue-template-compiler": "^2.7.14",
        "vuex-module-decorators": "^1.0.1"
    },
    "lint-staged": {
        "*.{js,jsx,ts,html,vue}": "eslint --fix",
        "*.{css,scss}": "stylelint --fix",
        "*.{js,ts,jsx,vue,scss,css,json,html}": "prettier --write"
    }
}
