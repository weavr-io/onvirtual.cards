{
    "name": "onvirtual-cards",
    "version": "1.0.0",
    "description": "onvirtual.cards for weavr",
    "author": "Threls Ltd.",
    "private": true,
    "scripts": {
        "dev": "nuxt",
        "build": "nuxt build",
        "start": "nuxt start",
        "lint": "eslint --ext .ts,.jsx,.js,.html,.vue . && stylelint \"**/*.{css,scss}\"",
        "lint:fix": "eslint --fix --ext .ts,.jsx,.js,.html,.vue . && stylelint \"**/*.{css,scss}\" --fix",
        "lint:ci": "eslint --ext .ts,.jsx,.js,.html,.vue . && stylelint \"**/*.{css,scss}\" && prettier \"**/*.{js,ts,jsx,vue,scss,css,json,html}\" --check",
        "precommit": "npm run lint",
        "pretty": "prettier --write \"**/*.{js,ts,jsx,vue,scss,css,json,html}\"",
        "generate": "nuxt generate",
        "prepare": "husky install"
    },
    "dependencies": {
        "@nuxtjs/axios": "^5.13.6",
        "@nuxtjs/dotenv": "^1.4.2",
        "bootstrap": "^4.6.2",
        "bootstrap-vue": "^2.23.1",
        "dot-object": "^2.1.5",
        "js-cookie": "^3.0.5",
        "nuxt": "^2.18.1",
        "ts-node": "^10.9.2",
        "vue-flatpickr-component": "^8.1.8",
        "vue-infinite-loading": "^2.4.5",
        "vue-moment": "^4.1.0",
        "vue-phone-number-input": "^1.12.13",
        "vuelidate": "^0.7.7",
        "vuex-class": "^0.3.2"
    },
    "devDependencies": {
        "@nuxt/types": "^2.18.1",
        "@nuxt/typescript-build": "^3.0.2",
        "@nuxtjs/eslint-config-typescript": "^12.1.0",
        "@nuxtjs/eslint-module": "^3.1.0",
        "@nuxtjs/recaptcha": "^1.1.2",
        "@nuxtjs/svg": "^0.1.12",
        "@types/vuelidate": "^0.7.21",
        "@typescript-eslint/eslint-plugin": "^6.13.2",
        "@typescript-eslint/parser": "^6.13.2",
        "eslint": "^8.47.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-nuxt": "^4.0.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-vue": "^9.17.0",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.7",
        "nodemon": "^3.0.1",
        "nuxt-property-decorator": "^2.9.1",
        "prettier": "^3.1.0",
        "sass": "1.64.0",
        "sass-loader": "^10.4.1",
        "stylelint": "^15.10.3",
        "stylelint-config-standard": "^34.0.0",
        "stylelint-config-standard-scss": "^11.1.0",
        "vue-property-decorator": "^9.1.2",
        "vue-svg-loader": "^0.10.0",
        "vue-template-compiler": "^2.7.14",
        "vuex-module-decorators": "^1.0.1"
    },
    "lint-staged": {
        "*.{js,jsx,ts,html,vue}": "eslint --fix",
        "*.{css,scss}": "stylelint --fix",
        "*.{js,ts,jsx,vue,scss,css,json,html}": "prettier --write"
    }
}
