{
    "name": "onvirtual-cards",
    "version": "1.0.0",
    "description": "onvirtual.cards for weavr",
    "author": "Threls Ltd.",
    "private": true,
    "scripts": {
        "dev": "nuxt dev",
        "build": "nuxt build",
        "start": "nuxt start",
        "lint": "eslint --ext .ts,.jsx,.js,.html,.vue . && stylelint \"**/*.{css,scss}\"",
        "lint:fix": "eslint --fix --ext .ts,.jsx,.js,.html,.vue . && stylelint \"**/*.{css,scss}\" --fix",
        "lint:ci": "eslint --ext .ts,.jsx,.js,.html,.vue . && stylelint \"**/*.{css,scss}\" && prettier \"**/*.{js,ts,jsx,vue,scss,css,json,html}\" --check",
        "precommit": "npm run lint",
        "pretty": "prettier --write \"**/*.{js,ts,jsx,vue,scss,css,json,html}\"",
        "generate": "nuxt generate",
        "prepare": "husky"
    },
    "dependencies": {
        "@nuxtjs/axios": "^5.13.6",
        "@pinia/nuxt": "^0.5.1",
        "@vue/compat": "^3.4.31",
        "@vue/compiler-sfc": "^3.4.31",
        "bootstrap": "^4.6.2",
        "bootstrap-vue": "^2.23.1",
        "dot-object": "^2.1.4",
        "libphonenumber-js": "^1.11.4",
        "luxon": "^3.4.4",
        "nuxt": "^3.12.2",
        "pinia": "^2.1.7",
        "ts-node": "^10.9.2",
        "v3-infinite-loading": "^1.3.1",
        "vue-flatpickr-component": "^11.0.5",
        "vue-virtual-scroller": "^1.1.2",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@nuxtjs/eslint-config-typescript": "^12.0.0",
        "@nuxtjs/eslint-module": "^3.1.0",
        "@types/lodash-es": "^4.17.12",
        "@types/luxon": "^3.4.2",
        "@typescript-eslint/eslint-plugin": "^6.13.2",
        "@typescript-eslint/parser": "^6.13.2",
        "eslint": "^8.47.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-nuxt": "^4.0.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-vue": "^9.17.0",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.5",
        "lodash-es": "^4.17.21",
        "prettier": "^3.1.0",
        "sass": "1.64.0",
        "sass-loader": "^10.4.1",
        "stylelint": "^15.10.3",
        "stylelint-config-standard": "^34.0.0",
        "stylelint-config-standard-scss": "^11.1.0",
        "typescript": "^5.5.3",
        "vite-svg-loader": "^5.1.0",
        "vue-tsc": "^2.0.26"
    },
    "lint-staged": {
        "*.{js,jsx,ts,html,vue}": "eslint --fix",
        "*.{css,scss}": "stylelint --fix",
        "*.{js,ts,jsx,vue,scss,css,json,html}": "prettier --write"
    },
    "overrides": {
        "vue": "^3.4.31"
    }
}
